---
import kitchenIcon from "../../../assets/img/landing/icons/kitchen-icon.png";
import interiorIcon from "../../../assets/img/landing/icons/interior-icon.png";
import basementIcon from "../../../assets/img/landing/icons/basement-icon.png";
import exteriorIcon from "../../../assets/img/landing/icons/exterior-icon.png";
import bathroomIcon from "../../../assets/img/landing/icons/bathroom-icon.png";
import { Image } from "astro:assets";

const icons = [
  {
    icon: kitchenIcon,
    title: "REMODELING KITCHEN",
  },
  {
    icon: interiorIcon,
    title: "INTERIOR REMODEL",
  },
  {
    icon: basementIcon,
    title: "BASEMENT REMODEL",
  },
  {
    icon: exteriorIcon,
    title: "EXTERIOR REMODEL",
  },
  {
    icon: bathroomIcon,
    title: "BATHROOM REMODEL",
  },
];
---

<section class="container">
  <h2 class="text-2xl md:text-3xl font-inter mb-8">
    DISCOVER OUR WIDE VARIETY OF SERVICES
  </h2>
  <div class="flex justify-evenly flex-wrap gap-8">
    {
      icons.map(({ icon, title }) => (
        <div class="flex flex-col items-center gap-4">
          <Image
            src={icon}
            alt={title}
            width={164}
            height={164}
            class="w-[64px] md:w-[164px] h-[64px] md:h-[164px] object-contain object-center"
          />
          <p class="text-center">{title}</p>
        </div>
      ))
    }
  </div>
</section>
