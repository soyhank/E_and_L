---
import image1 from "./light-grey-shaker.jpg";
import image2 from "./ice-white-shaker.jpg";
import image3 from "./grey-stone-shaker.png";
import image4 from "./nova-light-grey.jpg";
import CardReveal from "./CardReveal.astro";

const items = [
  {
    title: "Light Grey Shaker",
    content:
      "The Shaker collection's versatile design suits any style or color scheme in traditional and modern homes, with various colors for a contemporary twist.",
    image: image1,
  },
  {
    title: "Ice White Shaker",
    content:
      "Ice White Shaker cabinets enhance kitchen space, offering a clean, versatile design suitable for traditional and modern homes, complementing any layout or color scheme.",
    image: image2,
  },
  {
    title: "Grey Stone Shaker",
    content:
      "The Shaker collection offers a versatile design for traditional and modern homes, with varied colors for a contemporary flair in any layout.",
    image: image3,
  },
  {
    title: "Nova Light Grey",
    content:
      "The Shaker collection's clean, adaptable design suits any layout or color scheme in traditional and modern homes, offering a contemporary twist.",
    image: image4,
  },
];

interface Props {
  title?: string;
  description?: string;
  class?: string;
  slice?: number;
}

const {
  title = "CABINETRY WORK",
  description = `Let E&L Home Improvements transform your space with cabinets tailored to your distinctive style.`,
  class: className,
  slice,
} = Astro.props;
---

<section
  class:list={["container flex flex-col gap-6 py-10 text-center", className]}
>
  {
    title && (
      <h5 class="text-2xl md:text-5xl text-darkblue font-chivo">{title}</h5>
    )
  }
  {description && <p class="text-lg">{description}</p>}

  <ul class="grid grid-cols-2 md:grid-cols-4 gap-4 md:gap-10">
    {items.map((item) => <CardReveal slice={slice} {...item} />)}
  </ul>
</section>
