import ServiceLayout from "../_components/ServiceLayout.astro";
import coverImage from "./cover.jpg";
import image1 from "./image1.jpg";
import DualGrid from "../_components/DualGrid.astro";
import Layout from "../../../layouts/Layout.astro";
import FrequentlyQuestions from "../_components/FrequentlyQuestions.astro";
import { getServiceSeo } from "../../../utils/get_seo";

const list = [
  "We assist throughout, making the remodeling process seamless.",
  "Tailored blueprints for a bathroom that suits your style.",
];

const unlockList = [
  "Increased Property Value",
  "Improved Bathing Experience",
  "Energy-Efficient Upgrades",
  "Customized Style and Functionality",
];

const frequentlyQuestions = [
  {
    question: "How long does a Bathroom remodeling project typically take?",
    answer:
      "Project timelines vary but generally range from a two weeks to a month, depending on the scope and complexity.",
  },
  {
    question: "What factors influence the cost of a bathroom remodeling?",
    answer:
      "Costs depend on materials, appliances, and the extent of structural changes. Customizations and high-end finishes can impact the budget.",
    defaultOpen: true,
