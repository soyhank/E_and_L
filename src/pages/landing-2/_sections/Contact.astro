---
import { Image } from "astro:assets";
import bgFormImg from "../../../assets/img/landing/bg-form.png";
import Form from "./Form.astro";
---

<section class="relative pb-10">
  <Image
    src={bgFormImg}
    alt={"Contact Us Image"}
    style={{
      objectFit: "cover",
      position: "absolute",
      zIndex: -1,
      minWidth: "100%",
      height: "100%",
    }}
  />
  <div class="container py-10 flex flex-col">
    <header class="text-white mb-4">
      <h2 class="text-2xl md:text-5xl mb-2">Get in Contact!</h2>
      <p class="text-lg md:text-xl">TRANSFORM YOUR HOME WITH US.</p>
      <p class="text-lg md:text-xl">DON'T WAIT ANY LONGER!</p>
    </header>

    <Form class="m-auto" messageClasses="text-white" />
  </div>
</section>
