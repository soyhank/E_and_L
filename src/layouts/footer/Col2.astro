---
import { Icon } from "astro-icon/components";
import { config } from "../../data";
---

<div class="flex flex-col gap-6">
  <h4 class="text-darkred font-chivo text-lg">Contact Info</h4>
  <ul class="flex flex-col gap-6">
    <li>
      <a
        class="text-graytext flex gap-2 items-center"
        href={`tel:${config.contact.phone.value}`}
        target="_blank"
      >
        <Icon name="core/phone" color="black" size={16} />
        <span>{config.contact.phone.formatted}</span>
      </a>
    </li>
    <li>
      <a
        class="text-graytext flex gap-2 items-center"
        href={`mailto:${config.contact.email.contact}`}
        target="_blank"
      >
        <Icon name="core/mail" color="black" size={16} />

        <span class="break-all">{config.contact.email.contact}</span>
      </a>
    </li>
  </ul>

  <h4 class="text-darkred font-chivo text-lg">Customer Service</h4>
  <ul class="flex flex-col gap-6">
    <li>
      <a
        class="text-graytext flex gap-2 items-center"
        href={`mailto:${config.contact.email.customer}`}
        target="_blank"
      >
        <Icon name="core/phone" color="black" size={16} />
        <span class="break-all">{config.contact.email.customer}</span>
      </a>
    </li>
  </ul>
</div>
